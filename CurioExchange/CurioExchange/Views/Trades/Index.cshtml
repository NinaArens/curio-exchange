@model CurioExchange.ViewModels.UserPieceViewModel

@{
    ViewBag.Title = "Trades";
}

<h2>Trades</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<h3>Players having pieces you want</h3>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WantedPieces.FirstOrDefault().OwnedID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WantedPieces.FirstOrDefault().Piece)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WantedPieces.FirstOrDefault().User.UserName)
        </th>
        <th>@Html.LabelFor(model => model.WantedPieces.FirstOrDefault().Added) </th>
    </tr>

    @foreach (var item in Model.WantedPieces)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OwnedID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Piece.Name)
            </td>
            <td>
                @Html.ActionLink(item.User.UserName, "Details", "Users", new { userId = item.User.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Added)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
        </tr>
    }

</table>

