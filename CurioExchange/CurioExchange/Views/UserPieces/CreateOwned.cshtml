@model CurioExchange.Models.UserPieceModel

@{
    ViewBag.Title = "Add owned piece";
}

<h2>Add owned piece</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.User_Id)
    @Html.HiddenFor(model => model.Owned)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Piece, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.ListBoxFor(model => model.Piece_Ids, new SelectList(Model.Pieces, "Id", "Name"), new { size = 10 })
                    @Html.ValidationMessageFor(model => model.Piece_Id, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
